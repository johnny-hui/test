@model IEnumerable<lab4.Models.Province>

@{
    ViewData["Title"] = "Provinces List";
}

<h1>Index</h1>

<p id="buttonContainer">
    <a asp-action="Create" id="createButton">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProvinceName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProvinceName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProvinceCode">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ProvinceCode">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ProvinceCode">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
